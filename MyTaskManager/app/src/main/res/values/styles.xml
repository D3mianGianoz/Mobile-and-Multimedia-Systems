<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto_slab</item>
    </style>

    <style name="button_style" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:letterSpacing">
            0.05
        </item>
        <item name="android:textColor">
            @color/colorButtonText
        </item>
        <item name="cornerRadius">
            8dp
        </item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="profile_label_style">
        <item name="android:textSize">
            10sp
        </item>
        <item name="android:letterSpacing">
            0.20
        </item>
        <item name="android:textColor">
            @color/colorPrimaryDark
        </item>
        <item name="android:height">
            16sp
        </item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="profile_edit_label_style">
        <item name="android:textSize">
            10sp
        </item>
        <item name="android:letterSpacing">
            0.20
        </item>
        <item name="android:textColor">
            @color/colorPrimaryDark
        </item>
        <item name="android:height">
            16sp
        </item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
